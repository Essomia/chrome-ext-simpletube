{
    "manifest_version": 3,
    "name": "SimpleTube - YouTube Filters & Subscriptions Manager",
    "version": "0.2.0",
    "description": "Filters for YouTube videos based on video length and subscriptions manager",
    "permissions": ["storage", "activeTab", "scripting"],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["content.js"]
        },
        {
            "matches": [
                "*://www.youtube.com/feed/channels*",
                "*://www.youtube.com/feed/subscriptions*"
            ],
            "js": ["contentCategorize.js"],
            "css": ["contentCategorize.css"],
            "run_at": "document_idle"
        }
    ]
}
